<script>
	$(document).ready(function(){
	    setTimeout(function() {
	        $('#flash_messages').slideUp(100);
	    }, 3000);
	});
</script>

<div class = "alert" style = "text-align: center;" id = "flash_messages">
  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, :class => "flash #{key}") %>
  <% end %>
</div>