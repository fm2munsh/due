<%= form_for @user do |f| %>

  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.text_field  :name %>
  <%= f.password_field  :password %>
  <%= password_field_tag  :password_confirmation %>
  <%= f.submit %>

<% end %>