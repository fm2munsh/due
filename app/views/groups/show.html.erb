<div>
	<h1> <%= @group.name %> </h1>
	<% if (!@group.users.include? current_user) %>
	  	<%= link_to "Join Group", join_group_path %>
	<% end %>
</div>
<div>

	<form action = '/post/create' data-remote = 'true'>
		<input id = 'new-post-name' type = 'text' placeholder = 'Post' name = 'name'>
		<input type = 'hidden' value = <%= @group.id %> name = 'group_id'>
		<input type = 'submit' class = 'btn'>
	</form>

	<div id="posts-list">
		<%= render @group.posts.reverse %>
	</div>
	
</div>