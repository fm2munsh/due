<div class = "center" id = "signin">

  <%= form_for(@group) do |g| %>
    <div class = "field">
    
      <%= g.text_field :name, :placeholder => "Insert Name Here"%>

      <br>
    
      <%= g.text_field :password, :placeholder => "Insert Password Here"%>

      <br>


      <%= g.submit "Create Group", class: "btn btn-large btn-primary" %></div>

    <% end %>
</div>

</body>